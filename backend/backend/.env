# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@cluster0.xxxxx.mongodb.net/smartbudget-ai?retryWrites=true&w=majority
DB_NAME=smartbudget-ai

# Server Configuration
PORT=5000
NODE_ENV=development

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=smartbudget-super-secret-jwt-key-2024-change-in-prod
JWT_REFRESH_SECRET=smartbudget-refresh-token-secret-2024
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Email Configuration (optional - can be configured later)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=SmartBudget AI <noreply@smartbudget.com>

# Cloudinary Configuration (optional - for profile pictures)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# OpenAI Configuration (optional - for AI features)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173
PRODUCTION_URL=https://smartbudget-ai-enhanced.vercel.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=smartbudget-session-secret-2024

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false